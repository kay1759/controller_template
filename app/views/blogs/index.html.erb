<p id="notice"><%= notice %></p>

<h1>Blogs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @resources.each do |blog| %>
      <tr>
        <td><%= blog.name %></td>
        <td><%= blog.title %></td>
        <td><%= blog.content %></td>
        <td><%= link_to 'Show', blog %></td>
        <td><%= link_to 'Edit', edit_blog_path(blog) %></td>
        <td><form method="post" name="resouce_delete" action="/blogs/<%= blog.id %>"><input type="hidden" name="_method" value="delete" /><%= hidden_field_tag :authenticity_token, form_authenticity_token %><a href="javascript:resouce_delete.submit()">Destory</a></form></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Blog', new_blog_path %>
