<p id="notice"><%= notice %></p>

<h1>Blog Posts</h1>

<table>
  <thead>
    <tr>
      <th>Blog</th>
      <th>Name</th>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @resources.each do |blog_post| %>
      <tr>
        <td><%= blog_post.blog_id %></td>
        <td><%= blog_post.name %></td>
        <td><%= blog_post.title %></td>
        <td><%= blog_post.content %></td>
        <td><%= link_to 'Show', blog_post %></td>
        <td><%= link_to 'Edit', edit_blog_post_path(blog_post) %></td>
        <td><form method="post" name="resouce_delete" action="/blog_posts/<%= blog_post.id %>"><input type="hidden" name="_method" value="delete" /><%= hidden_field_tag :authenticity_token, form_authenticity_token %><a href="javascript:resouce_delete.submit()">Destory</a></form></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Blog Post', new_blog_post_path %>
